<% include header %>
<div class="pure-u-1">
  <h1>Temperatura Local</h1>
</div>
<div class="pure-g">
<div class="pure-u-1">
  <h2>Latitud y Longitud</h2>
<form action="/geo" method='post' class="pure-form pure-form-aligned" name="dataForm">
  <fieldset>
        <div class="pure-control-group">
            <label for="lat">Latitud</label>
            <input id="lat" name='lat' type="text" placeholder="Username" value="">
        </div>
        <div class="pure-control-group">
            <label for="long">Longitud</label>
            <input id="long" name='long' type="text" placeholder="Username" value="">
        </div>
        <button type="submit" class="pure-button pure-button-primary">Submit</button>
        </div>
    </fieldset>
</form>
</div>
</div>
<script type="text/javascript">
  window.onload = function(){
    var lat,long;
    function success(pos){
      var cord = pos.coords;
      lat = cord.latitude;
      long = cord.longitude;
      console.log(lat);
      document.getElementById('lat').value = lat;
      document.getElementById('long').value = long;
    }
    function error(err){
      console.log('No hay soporte para geolocation');
    }
    navigator.geolocation.getCurrentPosition(success, error);

    //console.log(lat);
  };
</script>
